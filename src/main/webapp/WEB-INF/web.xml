<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <display-name>Controller</display-name>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.edu.less05.myapp.controller.Controller</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ResultPage</servlet-name>
        <jsp-file>/WEB-INF/jsp/result.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>MainPage</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/toController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ResultPage</servlet-name>
        <url-pattern>/toResult</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MainPage</servlet-name>
        <url-pattern>/toMain</url-pattern>
    </servlet-mapping>

</web-app>
